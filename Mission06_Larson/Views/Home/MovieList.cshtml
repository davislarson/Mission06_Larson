@model List<Movie>

<h1>Movie's in the Database</h1>

<br>

<table class="table table-bordered">
    <thead class="fw-bold">
    <tr>
        <td>Title</td>
        <td>Category/Genre</td>
        <td>Year Released</td>
        <td>Director</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>Lent To</td>
        <td>Copied To Plex</td>
        <td>Notes</td>
        <td>Actions</td>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.Title</td>
        <td>@(x.Category?.CategoryName ?? "No Category")</td>
        <td>@x.Year</td>
        <td>@x.Director</td>
        <td>@x.Rating</td>
        <td>@x.Edited</td>
        <td>@x.LentTo</td>
        <td>@x.CopiedToPlex</td>
        <td>@x.Notes</td>
        <td>
            <a asp-controller="Home" asp-action="Edit" asp-route-filmId="@x.MovieID" class="btn btn-info">Edit</a>
            <a asp-controller="Home" asp-action="Delete" asp-route-filmId="@x.MovieID" class="btn btn-warning">Delete</a>
        </td>
    </tr>
    
    }
    </tbody>
</table>