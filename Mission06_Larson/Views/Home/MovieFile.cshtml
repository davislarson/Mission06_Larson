@* This will be the form to add a record to the movie database *@
@model Movie

<h1>Enter a new movie to the Database</h1>

<form method="post">
    <label asp-for="Category">Category (Required):</label>
    <input asp-for="Category">
    <br><br>

    <label asp-for="Title" >Title (Required):</label>
    <input asp-for="Title">
    <br><br>

    <label asp-for="YearReleased">Year Released (Required):</label>
    <input asp-for="YearReleased">
    <br><br>

    <label asp-for="Director">Director (Required):</label>
    <input asp-for="Director" >
    <br><br>

    <label asp-for="Rating">Rating (Required):</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br><br>

    <label asp-for="IsEdited">Edited:</label>
    <input asp-for="IsEdited" type="radio" value="true" id="edited-yes">
    <label for="edited-yes">Yes</label>
    <input asp-for="IsEdited" type="radio" value="false" id="edited-no">
    <label for="edited-no">No</label>
    <br><br>

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo">
    <br><br>

    <label asp-for="Notes">Notes (Max 25 characters):</label>
    <input asp-for="Notes">
    <br><br>
    
    <button type="submit">Submit</button>
</form>